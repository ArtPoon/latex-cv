@Article{Montoya:2016,
  Title                    = {{Deep sequencing increases hepatitis C virus phylogenetic cluster detection compared to Sanger sequencing}},
  Author                   = {Montoya, Vincent and Olmstead, Andrea and Tang, Patrick and Cook, Darrel and Janjua, Naveed and Grebely, Jason and Jacka, Brendan and Poon, Art F Y and Krajden, Mel},
