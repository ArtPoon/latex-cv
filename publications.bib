@Article{Kinloch:2015,
  Title                    = {Population-Level Immune-Mediated Adaptation in {HIV}-1 Polymerase during the {North American} Epidemic},
  Author                   = {Kinloch, Natalie N and MacMillan, Daniel R and Le, Anh Q and Cotton, Laura A and Bangsberg, David R and Buchbinder, Susan and Carrington, Mary and Fuchs, Jonathan and Harrigan, P Richard and Koblin, Beryl and Kushel, Margot and Markowitz, Martin and Mayer, Kenneth and Milloy, M J and Schechter, Martin T and Wagner, Theresa and Walker, Bruce D and Carlson, Jonathan M and Poon, Art F Y and Brumme, Zabrina L},
