  Author                   = {Lapointe, H R and Dong, W and Lee, G Q and Bangsberg, D R and Martin, J N and Mocello, A R and Boum, Y and Karakas, A and Kirkby, D and Poon, A F Y and Harrigan, P R and Brumme, C J},
  Journal                  = {Antimicrob Agents Chemother},
  Year                     = {2015},

  Month                    = {Nov},
