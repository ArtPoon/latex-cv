  Author                   = {Knapp, David J H F and McGovern, Rachel A and Dong, Winnie and Poon, Art F Y and Swenson, Luke C and Zhong, Xiaoyin and Woods, Conan K and Harrigan, P Richard},
  Journal                  = {J Clin Microbiol},
